<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>milm-search</display-name>
<!-- TODO This is old CrawlingTimer. Comment out until a newer class is developed.
  <listener>
    <listener-class>org.milmsearch.core.crawling.CrawlingTimer</listener-class>
  </listener>
-->    
  <listener>
    <listener-class>org.milmsearch.core.Bootstrap</listener-class>
  </listener>
  <servlet>
    <servlet-name>MilmSearchApp</servlet-name>
    <servlet-class>org.apache.wink.server.internal.servlet.RestServlet</servlet-class>
    <init-param>
      <param-name>javax.ws.rs.Application</param-name>
      <param-value>org.milmsearch.core.api.MilmSearchApiApplication</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>MilmSearchApp</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>
  
</web-app>